@model LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form method="post" asp-controller="Home" asp-action="Index">

    <div class="mb-3">
        <label for="InputName1" class="form-label">Ad</label>
        <input type="text" class="form-control" id="InputName1">
    </div>

    <div class="mb-3">
        <label for="InputLastName1" class="form-label">Soyad</label>
        <input type="text" class="form-control" id="InputLastName1">
    </div>

    <div class="mb-3">
        <label for="InputEmail1" class="form-label">Eposta</label>
        <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">Epostanızı kimseyle paylaşmayacağız (yerseniz)</div>
    </div>

    <div class="mb-3">
        <label for="InputPassword1" class="form-label">Parola</label>
        <input type="password" class="form-control" id="InputPassword1">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
